{
    "name": "@{{project.name}}/{{pkg.name}}",
    "version": "0.1.0",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "test": "npm run build && ava"
    },
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
	"dependencies": {
		"@config/typescript": "0.1.0",
		"@config/shared-config": "0.1.0"
	},
    {{#if supportBrowserEnv}}"devDependencies": {
        "ava": "0.25.0",
        "typescript": "2.7.2",
		"browser-env": "3.2.5"
    },{{else}}"devDependencies": {
        "ava": "0.25.0",
        "typescript": "2.7.2"
    },{{/if}}
    {{#if supportBrowserEnv}}"ava": {
        "require": ["./lib/test/setupBrowserEnv.js"],
        "snapshotDir": "{{pkg.location}}/{{pkg.name}}/snapshots"
    }{{else}}"ava": {
        "snapshotDir": "{{pkg.location}}/{{pkg.name}}/snapshots"
    }{{/if}}
}
