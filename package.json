{
  "name": "dictive",
  "version": "0.1.0",
  "main": "./lib/module/index.js",
  "types": "./lib/types/index.d.ts",
  "scripts": {
    "c": "./node_modules/.bin/git-cz",
    "postinstall": "npm run bootstrap",
    "bootstrap": "./node_modules/.bin/lerna bootstrap --hoist",
    "lint": "./node_modules/.bin/tslint --project tsconfig.json",
    "lint-check": "./node_modules/.bin/tslint-config-prettier-check ./tslint.json",
    "test": "./node_modules/.bin/lerna run test",
    "prebuild": "npm run clean",
    "build": "./node_modules/.bin/lerna run build",
    "clean": "./node_modules/.bin/rimraf packages/**/lib && rimraf packages/**/src/*.d.ts"
  },
  "devDependencies": {
    "browser-env": "3.2.5",
    "lerna": "^2.8.0",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.7.0",
    "tslint-config-prettier": "1.9.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0"
  },
  "dependencies": {
    "typescript": "2.7.2",
    "husky": "0.14.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "babylon",
    "semi": true
  }
}
