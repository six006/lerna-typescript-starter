{
  "name": "your-project-name",
  "version": "0.1.0",
  "main": "./lib/module/index.js",
  "types": "./lib/types/index.d.ts",
  "private": true,
  "scripts": {
    "c": "./node_modules/.bin/git-cz",
    "cli": "node ./bin/cli/start",
    "postinstall": "./node_modules/.bin/run-s --print-name bootstrap",
    "bootstrap": "./node_modules/.bin/lerna bootstrap --hoist",
    "lint": "./node_modules/.bin/tslint --project ./config/typescript/tsconfig.json",
    "lint-check": "./node_modules/.bin/tslint-config-prettier-check ./tslint.json",
    "test": "./node_modules/.bin/lerna run test",
    "prebuild": "./node_modules/.bin/run-s --print-name clean",
    "build": "./node_modules/.bin/lerna run build",
    "changelog": "./node_modules/.bin/conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md && git commit -m \"chore(release): update changelog [auto]\"",
    "clean": "./node_modules/.bin/rimraf packages/**/lib && rimraf packages/**/src/*.d.ts",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "browser-env": "3.2.5",
    "chalk": "2.4.1",
    "commitizen": "2.9.6",
    "conventional-changelog-cli": "1.3.22",
    "cz-conventional-changelog": "2.1.0",
    "figures": "2.0.0",
    "husky": "1.0.0-rc.2",
    "lerna": "2.8.0",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.7.0",
    "tslint-config-prettier": "1.9.0",
    "vorpal": "1.12.0"
  },
  "dependencies": {
    "typescript": "2.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "./node_modules/.bin/run-s --print-name test changelog"
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "babylon",
    "semi": true
  }
}
